<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MiniECommerce" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
<!--        <item name="colorSecondary">@color/teal_200</item>-->
<!--        <item name="colorSecondaryVariant">@color/teal_700</item>-->
<!--        <item name="colorOnSecondary">@color/black</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
<!--        <item name="android:windowBackground">@color/white</item>-->
        <item name="fontFamily">@font/open_sans</item>

    </style>

    <style name="SplashTheme" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Button.Default" parent="Widget.MaterialComponents.Button">
        <item name="colorButtonNormal">@android:color/white</item>
        <item name="android:textSize">@dimen/font_12</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="backgroundTint">@color/primaryColor</item>
    </style>

    <style name="Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="colorButtonNormal">@color/primaryColor</item>
        <item name="android:textSize">@dimen/font_12</item>
        <item name="android:textColor">@color/grey_40</item>
<!--        <item name="android:textStyle">bold</item>-->
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
    </style>

    <style name="Custom.Headings" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">@dimen/font_15</item>
        <item name="android:textColor">@color/grey_90</item>
        <item name="android:textStyle">bold</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="Custom.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/font_12</item>
        <item name="android:textColor">@color/secondary_txt_color</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="Custom.Body.Bold" parent="Custom.Body">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Custom.Body.Small" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/font_10</item>
        <item name="android:textColor">@color/secondary_txt_color</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="Widget.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
    </style>

    <style name="Widget.Card.NoShadow" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="SliderViewStyle" parent="Widget.MaterialComponents.Slider">
        <item name="sliderAnimationDuration">600</item>
        <item name="sliderIndicatorAnimationDuration">600</item>
        <item name="sliderIndicatorGravity">end|bottom</item>
        <item name="sliderIndicatorMargin">@dimen/spacing_large</item>
        <item name="sliderIndicatorOrientation">horizontal</item>
        <item name="sliderIndicatorPadding">3dp</item>
        <item name="sliderIndicatorRadius">2dp</item>
        <item name="sliderIndicatorSelectedColor">@color/colorPrimary</item>
        <item name="sliderIndicatorUnselectedColor">@color/white</item>
        <item name="sliderScrollTimeInSec">2</item>
        <item name="sliderStartAutoCycle">true</item>
        <item name="sliderAutoCycleDirection">back_and_forth</item>
        <item name="sliderAutoCycleEnabled">true</item>
    </style>

    <style name="EditText.Default" parent="Theme.MaterialComponents">
        <item name="android:textColorHint">@color/primaryColor</item>
        <item name="android:textColor">@color/grey_90</item>
        <item name="android:textSize">@dimen/font_12</item>
        <item name="android:padding">@dimen/spacing_large</item>
        <item name="android:background">@drawable/edit_text_bg</item>
    </style>


</resources>